{% layout "server/layouts/base.liquid" %}

{% block content %}

  <div class="grid">
    <div class="spotify-track">
      <div class="track-card">
        <img
          src="{{ track.album.images[0].url }}"
          alt="Album cover: {{ track.album.name }}"
          class="album-cover" />

        <div class="track-info">
          <h2>{{ track.name }}</h2>
          <small>artist</small>
          <p>
            {% for artist in track.artists %}
              <a
                href="{{ artist.external_urls.spotify }}"
                class="artist-link {% unless forloop.last %}not-last-artist{% endunless %}"
                target="_blank">
                {{ artist.name }}</a>
            {% endfor %}
          </p>
          <small>album</small>
          <a
            href="{{ track.album.external_urls.spotify }}"
            class="album-link"
            target="_blank">{{ track.album.name }}</a>
        </div>
      </div>

      <div class="spotify-embed">
        <iframe
          style="border-radius:12px"
          src="https://open.spotify.com/embed/track/{{ track.id }}?utm_source=generator"
          width="100%"
          height="152"
          frameBorder="0"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"></iframe>
      </div>
    </div>

    <div class="genre-box">
      <p>genre</p>
    </div>
    <div class="genre-box">
      <p>genre</p>
    </div>
    <div class="genre-box">
      <p>genre</p>
    </div>

    <p
      class="genre"
      id="jazz"
      draggable="true">Jazz</p>
    <p
      class="genre"
      id="funk"
      draggable="true">Funk</p>
    <p
      class="genre"
      id="samba"
      draggable="true">Samba</p>
  </div>

{% endblock %}